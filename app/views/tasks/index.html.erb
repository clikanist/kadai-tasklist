<h1>タスク一覧</h1>

  <table class="table table-striped">
        <thead>
      <tr>
        <th>id</th>
        <th>投稿者</th>
        <th>タイトル</th>
        <th>メッセージ</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.user.name %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% if logged_in? %>

  <%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>

<% else %>
  <%= link_to 'Signup', signup_path, class: "btn btn-primary" %>
  <%= link_to 'Login', login_path, class: "btn btn-primary" %>
<% end %>